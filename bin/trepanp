#!/usr/bin/env perl
# Standalone routine to invoke program under the debugger.
use English;
use File::Basename;
use File::Spec;
use constant TREPAN_DIR => File::Spec->catfile(dirname(__FILE__), '..', 'lib');
# Process options in @ARGV; 

# FIXME: Syntax check program.
die "You need a Perl program to run" unless @ARGV;

exec ($EXECUTABLE_NAME, '-I', TREPAN_DIR, '-d:Trepan', @ARGV);
